<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_aggiungi_evento"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="chiaradecaria.agenda.ActivityAggiungiEvento">

    <TextView
        android:text="Titolo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/txtViewTitolo"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:layout_below="@+id/txtViewTitolo"
        android:layout_centerHorizontal="true"
        android:id="@+id/txtTitolo"
        android:textAlignment="center" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:layout_below="@+id/txtViewLuogo"
        android:layout_alignLeft="@+id/txtTitolo"
        android:layout_alignStart="@+id/txtTitolo"
        android:id="@+id/txtLuogo"
        android:textSize="18sp"
        android:textAlignment="center" />

    <TextView
        android:text="Orario inizio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtLuogo"
        android:layout_centerHorizontal="true"
        android:id="@+id/txtOraInizio"
        android:textSize="18sp"
        android:textColor="@android:color/black" />

    <TextView
        android:text="Luogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtViewLuogo"
        android:textSize="18sp"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:layout_below="@+id/txtTitolo"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:ems="10"
        android:layout_below="@+id/txtOraInizio"
        android:layout_alignLeft="@+id/txtLuogo"
        android:layout_alignStart="@+id/txtLuogo"
        android:id="@+id/txtOrarioInizio"
        android:textAlignment="center" />

    <TextView
        android:text="Orario fine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtOrarioInizio"
        android:layout_centerHorizontal="true"
        android:id="@+id/txtViewOrarioFine"
        android:textSize="18sp"
        android:textColor="@android:color/black" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:ems="10"
        android:layout_below="@+id/txtViewOrarioFine"
        android:layout_alignLeft="@+id/txtOrarioInizio"
        android:layout_alignStart="@+id/txtOrarioInizio"
        android:id="@+id/txtOrarioFine"
        android:textAlignment="center" />

    <Button
        android:text="Salva"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtOrarioFine"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:id="@+id/btnSalva"
        android:onClick="btnSalvaOnClick"
        android:background="?attr/colorButtonNormal" />

</RelativeLayout>
