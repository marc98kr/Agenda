<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="chiaraemichele.Agenda">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="chiaraemichele.michele.Agenda.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="chiaraemichele.michele.Agenda.ActivityEventi"
            android:theme="@style/DialogStyle" />
        <activity
            android:name="chiaraemichele.michele.Agenda.ActivityAggiungiEvento"
            android:theme="@style/Theme.AppCompat" />
        <activity android:name="chiaraemichele.michele.Agenda.ActivityVisualizzaEvento" />
    </application>

</manifest>